<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="10.5" >
    <include layout="@layout/header" />

    <LinearLayout

        android:weightSum="4"
        android:layout_weight="4.1"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_height="0dip">

        <mbLib.CusFntTextView

            android:id="@+id/cust_nm"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_weight="1.2"
            android:gravity="top"
            android:text="Shrikant S Patil"
            android:textSize="20sp" />

        <mbLib.CusFntTextView
            android:id="@+id/last_login"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:text=""
            android:textSize="16sp" />

        <LinearLayout
            android:background="@drawable/ur_border"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:weightSum="2.3" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_marginTop="7dip"
                android:layout_weight="1"
                android:background="@mipmap/rounded_corner_spinner"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="4" >

                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/select_accnt"
                    style="@style/spinnerStyle"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="3.2"
                    android:background="@mipmap/rounded_corner_spinner" />

                <ImageButton
                    android:id="@+id/select_accnt_btn"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:background="@mipmap/rounded_corner_spinner"
                    android:src="@mipmap/spinner_down" />
            </LinearLayout>

            <mbLib.CusFntTextView
                android:id="@+id/balance"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_weight="1.3"
                android:gravity="left|center_vertical"
                android:text=""
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFFFFF" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="5.0"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:backgroundTint="@color/bg_color"
            android:weightSum="2" >


            <LinearLayout
                android:layout_margin="2.5dp"
                android:background="@drawable/ur_border"
                android:id="@+id/rechargeImg"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:layout_margin="10dip"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:src="@mipmap/mobile" />

                <mbLib.CusFntTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="top|center_horizontal"
                    android:text="Recharge"
                    android:textSize="18sp" />

            </LinearLayout>



            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:background="#FFFFFF" />


            <LinearLayout
                android:layout_margin="2.5dp"
                android:background="@drawable/ur_border"
                android:id="@+id/billImg"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_margin="10dip"
                    android:layout_weight="0.7"
                    android:src="@mipmap/bill2" />

                <mbLib.CusFntTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="top|center_horizontal"
                    android:text="Pay Bill"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FFFFFF" />

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="2.5"
            android:backgroundTint="@color/bg_color"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_margin="2.5dp"
                android:background="@drawable/ur_border"
                android:id="@+id/transferImg"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_margin="10dip"
                    android:layout_weight="0.7"
                    android:src="@mipmap/fund_trnsfer2" />

                <mbLib.CusFntTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="top|center_horizontal"
                    android:text="Fund Transfer"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_margin="2.5dp"
                android:background="@drawable/ur_border"
                android:id="@+id/ministatementImg"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_margin="10dip"
                    android:layout_weight="0.7"
                    android:src="@mipmap/checkbkstatus2" />

                <mbLib.CusFntTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="top|center_horizontal"
                    android:text="Mini Statement"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <mbLib.HorizontalListView
        android:id="@+id/list_tags"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
       android:layout_margin="20dp"
        android:layout_weight="1.4"
        android:background="#FFFFFF"
        android:gravity="center" >
    </mbLib.HorizontalListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:gravity="center"
        android:background="#ad3c45"
        android:visibility="visible"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center"
        android:background="#FF5722"
        android:visibility="visible"
        />


</LinearLayout>